# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

[{*.yaml,*.yml,.clangd}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.{sh,bash}]
indent_size = 2

[*.{js,mjs,cjs}]
indent_size = 2

[*.{md,markdown}]
indent_size = 2
